<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResidentSignUp">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="User's personal info"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:text="Full Name" />

    <EditText
        android:id="@+id/nameeditText2RSU"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edittext_style"
        android:ems="10"
        android:padding="8dp"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:text="Date of Birth" />

    <EditText
        android:id="@+id/dobeditText3RSU"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edittext_style"
        android:ems="10"
        android:padding="8dp"
        android:inputType="date" />

    <TextView
        android:id="@+id/textView6"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="E-Mail" />

    <EditText
        android:id="@+id/emaileditTextRSU"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edittext_style"
        android:ems="10"
        android:padding="8dp"
        android:inputType="textEmailAddress" />
    <TextView
        android:id="@+id/textView11"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Number" />

    <EditText
        android:id="@+id/numbereditText3RSU"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edittext_style"
        android:ems="10"
        android:padding="8dp"
        android:inputType="phone" />
    <TextView
        android:id="@+id/textView8"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Apartment No." />

    <EditText
        android:id="@+id/aptNoeditText5RSU"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edittext_style"
        android:ems="10"
        android:padding="8dp"
        android:inputType="number" />

    <Button
        android:id="@+id/nextbuttonRSU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_style"
        android:text="Next"
        android:textColor="@android:color/white" />



</LinearLayout>