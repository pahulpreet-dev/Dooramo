<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/sixTeen"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    tools:context=".RequestDetails">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Request:"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/requesttextView13RD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/servicetextView14RD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"
        android:text="Service: " />

    <TextView
        android:id="@+id/nametextView14RD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Request By: "
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/aptnotextView15rd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Apartment Number: "
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/numberRDtextView16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Contact No.: "
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/emailtextView17RD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Email: "
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/statustextView18RD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Status: "
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/datetextView19RD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Date: "
        android:textColor="@android:color/black" />

</LinearLayout>

    <Button
        android:id="@+id/statusbuttonRD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_style"
        android:text="Update Status"
        android:textColor="@android:color/white" />
    <Button
        android:id="@+id/feedbackbuttonRD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_style"
        android:text="Leave a feedback"
        android:visibility="gone"
        android:textColor="@android:color/white" />
</RelativeLayout>